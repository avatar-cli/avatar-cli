{
  "name": "@avatar-cli/avatar-cli",
  "version": "0.6.0",
  "description": "Avatar-CLI",
  "author": "Andres Correa Casablanca <castarco@coderspirit.xyz>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/avatar-cli/avatar-cli.git"
  },
  "scripts": {
    "commitlint": "commitlint",
    "git-cz": "git-cz",
    "lint:eslint": "eslint ./ -c .eslintrc.js --ext ts --cache --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm run lint:eslint && npm run lint:tsc"
  },
  "dependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@iarna/toml": "^2.2.5",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-min-length": [
        2,
        "always",
        8
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "subject-min-length": [
        2,
        "always",
        3
      ],
      "subject-max-length": [
        2,
        "always",
        50
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "ts-node ./src/scripts/post_commit.ts",
      "pre-commit": "ts-node ./src/scripts/pre_commit.ts",
      "pre-push": "ts-node ./src/scripts/git_checks.ts",
      "prepare-commit-msg": "ts-node ./src/scripts/prepare_commit_msg.ts"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  }
}
